<section class="hero ">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-8 is-offset-2">
          <figure class="image is-16by9">
            <img src="https://cdn.pixabay.com/photo/2017/08/10/08/47/laptop-2620118__340.jpg" alt="">
          </figure>
        </div>
      </div>

      <section class="section">
        <div class="columns">
          <div class="column is-8 is-offset-2">
            <div class="content is-medium">
              <h2 class="subtitle is-4">12/14/2022</h2>
              <h1 class="title">{{postTitle}} <p>{{{get_emoji}}}</p>
              </h1>
              <p>{{postContent}}</p>
              <p>Created by {{userName}} on {{createdAt}}</p>
              <p>
                <button class="btn btn-primary">Create new post</button>
              </p>
            </div>
          </div>
        </div>
      </section>