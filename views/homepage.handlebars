{{#if posts.length}}
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.postID}}">{{post.postTitle}}</a>
    </h2>
    <p>Created by {{post.userName}} on {{format_date post.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
{{else }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      //post title//
    </h2>
    <p>No posts created yet.</p>
  </div>
</div>
{{/if}}